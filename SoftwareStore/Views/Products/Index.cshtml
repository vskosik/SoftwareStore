@model IEnumerable<SoftwareStore.Models.Product>

@{
    ViewData["Title"] = "Apps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex; flex-direction: row; flex-wrap: wrap; justify-content: center;">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 250px; min-height: 250px; margin: 10px">
            <img style="height: 200px; width: 200px; margin: 10px auto 0; border: solid 1px; object-fit: fill;" src="..." class="card-img-top" alt="ProductIcon">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>